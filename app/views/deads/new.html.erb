<div class="top-contents-box">
　 <div class="ribbon1">レターボックス作成</div>
   <div class="form-box">
    <%= form_with(model: @dead, local: true) do |f| %>
        
        <%= render 'shared/error_messages_dead' %>
        
        <%= f.label :name, "故人のお名前" %>
        <%= f.text_field :name, class: 'form-control' %>
        
        <%= f.label :caption, "故人の詳細" %>
        <%= f.text_area :caption, class: 'form-control', :size => "100"  %>
        
        <%= f.label :dimage, "故人のお写真（レターボックス見出しとして表示されます）", id: "dimage-box" %>
        <%= f.attachment_field :dimage %>
        
        <%= f.submit "レターボックスを作成する", class: "btn" %>
    <% end %>
</div>
</div>